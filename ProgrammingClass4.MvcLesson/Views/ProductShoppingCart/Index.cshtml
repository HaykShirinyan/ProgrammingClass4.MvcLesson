@model List<ProductShoppingCart>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Unit Price
                </th>
                <th>
                    Manufacturer
                </th>
                <th>
                    Type
                </th>
                <th>
                    Unit of Measure
                </th>
                <th>
                    Remove
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var productShoppingCart in Model)
            {
                <tr>
                    <td>
                        @productShoppingCart.Product.Id
                    </td>
                    <td>
                        @productShoppingCart.Product.Name
                    </td>
                    <td>
                        @productShoppingCart.Product.Description
                    </td>
                    <td>
                        @productShoppingCart.Product.Quantity
                    </td>
                    <td>
                        @productShoppingCart.Product.UnitPrice
                    </td>
                    <td>
                        @productShoppingCart.Product.Manufacturer.Name
                    </td>
                    <td>
                        @productShoppingCart.Product.Type.Name
                    </td>
                    <td>
                        @productShoppingCart.Product.UnitOfMeasure.Name
                    </td>
                    <td>
                        <form asp-controller="ProductShoppingCart" asp-action="RemoveFromCart" asp-route-productId="@productShoppingCart.Product.Id" method="post">
                            <input type="hidden" name="productId" value="@productShoppingCart.Product.Id" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
