@model ProductViewModel

<h1 class="h2">
    Details
</h1>

<form asp-controller="Products" asp-action="Details">

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Product.Id" class="form-label">
                    Number
                </label>
                <input asp-for="Product.Id" class="form-control" readonly />
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Product.Name" class="form-label">
                    Name
                </label>
                <input asp-for="Product.Name" class="form-control" readonly />
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Description" class="form-label">
            Description
        </label>
        <Input asp-for="Product.Description" class="form-control" readonly />
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Product.Quantity" class="form-label">
                    Quantity
                </label>
                <input asp-for="Product.Quantity" class="form-control" readonly />
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Product.UnitPrice" class="form-label">
                    Unit Price
                </label>
                <input asp-for="Product.UnitPrice" class="form-control" readonly />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Product.TypeID" class="form-label">
                Type
            </label>
            <input asp-for="Product.TypeID" class="form-control" readonly />
        </div>
        <div>
            <label asp-for="Product.UnitOfMeasureId" class="form-label">
                Unit of measure
            </label>
            <input asp-for="Product.UnitOfMeasureId" class="form-control" readonly />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Product.ManufacturerId" class="form-label">
            Manufacturer
        </label>
        <input asp-for="Product.ManufacturerId" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <a asp-controller="ProductCategories" asp-action="Index" asp-route-productId="@Model.Product.Id">
            Categories
        </a>
    </div>
    <div class="mb-3">
        <a asp-controller="ProductColors" asp-action="index" asp-route-productId="@Model.Product.Id" class="btn btn-secondary">
            Colors
        </a>
    </div>

    <button class="btn btn-primary">
        Save
    </button>
</form>