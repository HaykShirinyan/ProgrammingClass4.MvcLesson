@model List<Product>

@{
    ViewData["Title"] = "Products";
}

<a class="btn btn-primary" asp-controller="Products" asp-action="Create">
    Create Product
</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Quantity
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Manufacturer
            </th>
            <th>
                ProductType
            </th>
            <th>
                UnitOfMeasure
            </th>
            <th>
                Actions
            </th>

        </tr>
    </thead>

    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @product.Id
                </td>
                <td>
                    @product.Name
                </td>
                <td>
                    @product.Description
                </td>
                <td>
                    @product.Quantity
                </td>
                <td>
                    @product.UnitPrice
                </td>
                <td>
                    @product.Manufacturer?.Name
                </td>
                <td>
                    @product.ProductType?.Name
                </td>
                <td>
                    @product.Measure?.Name
                </td>
                <td>
                    <img class="iphone-15-pro-max" src="@product.ImageUrl" alt="@product.Name" />
                </td>
                <td>
                    <a asp-controller="Products" 
                        asp-action="Edit" 
                        asp-route-id="@product.Id"
                        class="btn btn-secondary">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>