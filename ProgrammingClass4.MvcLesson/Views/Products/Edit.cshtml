@model Product

<h1 class="h2">
    Edit Product
</h1>

<form asp-controller="Products" asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Id" class="form-label">
                    ID
                </label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">
                    Name
                </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">
            Description
        </label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">
                    Quantity
                </label>
                <input asp-for="Quantity" class="form-control" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="UnitPrice" class="form-label">
                    Unit Price
                </label>
                <input asp-for="UnitPrice" class="form-control" />
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="TypeID" class="form-label">
                Type
            </label>
            <select asp-for="TypeID" class="form-control">
                <option value="">
                    please select
                </option>
                @foreach(var type in ViewBag.ProductTypes as List<ProductType>)
                {
                    <option value="@type.Id">
                        @type.Name
                    </option>
                }
            </select>
        </div>
    </div>

    <button class="btn btn-primary">
        Save
    </button>
</form>