@model ProductViewModel

<h1 class="h2">
    Edit Product
</h1>

<form asp-controller="Products" asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Product.Id" class="form-label">
                    ID
                </label>
                <input asp-for="Product.Id" class="form-control" readonly />
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Product.Name" class="form-label">
                    Name
                </label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Product.Description" class="form-label">
            Description
        </label>
        <textarea asp-for="Product.Description" class="form-control"></textarea>
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Product.Quantity" class="form-label">
                    Quantity
                </label>
                <input asp-for="Product.Quantity" class="form-control" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Product.UnitPrice" class="form-label">
                    Unit Price
                </label>
                <input asp-for="Product.UnitPrice" class="form-control" />
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="Product.TypeID" class="form-label">
                Type
            </label>
            <select asp-for="Product.TypeID" class="form-control">
                <option value="">
                    please select
                </option>
                @foreach(var type in Model.ProductTypes )
                {
                    <option value="@type.Id">
                        @type.Name
                    </option>
                }
            </select>
        </div>
        <div>
            <label asp-for="Product.UnitOfMeasureId" class="form-label">
                Unit of measure
            </label>
            <select asp-for="Product.UnitOfMeasureId" class="form-control">
                <option value="">
                    please select
                </option>
                @foreach (var unitOfMeasure in ViewBag.UnitOfMeasures as List<UnitOfMeasures>)
                {
                    <option value="@unitOfMeasure.Id">
                        @unitOfMeasure.Name
                    </option>
                }
            </select>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Product.ManufacturerId" class="form-label">
            Manufacturer
        </label>
        <select asp-for="Product.ManufacturerId" class="form-control">
            <option value="">-- Please Select --</option>

            @foreach (var manufacturer in ViewBag.Manufacturers as List<Manufacturer>)
            {
                <option value="@manufacturer.Id">
                    @manufacturer.Name
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <a asp-controller="ProductCategories" asp-action="Index" asp-route-productId="@Model.Product.Id">
            Categories
        </a>
    </div>
    <div class="mb-3">
        <a asp-controller="ProductColors" asp-action="index" asp-route-productId="@Model.Product.Id" class="btn btn-secondary">
            Colors
        </a>
    </div>

    <button class="btn btn-primary">
        Save
    </button>
</form>