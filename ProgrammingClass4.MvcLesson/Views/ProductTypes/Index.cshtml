@model List<ProductType>

@{
    ViewData["Title"] = "ProductTypes";
}

<a class="btn btn-primary"  asp-controller="ProductTypes" asp-action="Create">
    Create ProductType
</a>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var productType in Model)
        {
           <tr>
               <td>
                   @productType.Id
               </td>
               <td>
                   @productType.Name
               </td>
               <td>
                   @productType.Description
               </td>
               <td>
                   <a asp-controller="ProductTypes" asp-action="Edit" asp-route-id="@productType.Id" class="btn btn-secondary">
                       Edit
                   </a>
               </td>
           </tr> 
        }
    </tbody>

</table>