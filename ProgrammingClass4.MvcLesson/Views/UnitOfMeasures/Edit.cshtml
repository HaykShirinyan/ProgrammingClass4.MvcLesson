@model UnitOfMeasures
<div>
    <h2>
        Edit
    </h2>
</div>
<form asp-controller="UnitOfMeasures" asp-action="Edit" >
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Id"  class="form-label" >
                Id
            </label>
            <input asp-for="Id" class="form-control" readonly />
            <span asp-validation-for="Id">

            </span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Name" class="form-label">
                Name
            </label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger">

            </span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">
            Description
        </label>
        <textarea asp-for="Description" class="form-control">
            Description
        </textarea>
        <span asp-validation-for="Description" class="text-danger">

        </span>
    </div>

    <div>
        <a asp-controller="UnitOfMeasures" asp-action="index" class="btn btn-secondary">
            Cancel
        </a>
        <button type="submit" class="btn btn-primary">
            Save
        </button>
    </div>
</form>